<%- include('partials/header') -%>


    <div class="container w-100 my-4">
        <%- include('partials/messages') -%>
    </div>

    <h1 class="text-center mt-5 mb-3">Login</h1>

    <div class="container w-25">
        <form action="/" method="POST">

            <div class="form-group px-0 my-4">
                <input type="email" name="email" class="form-control" placeholder="Email Address">
            </div>

            <div class="form-group px-0 my-4">
                <input type="password" name="password" class="form-control" placeholder="Password">
            </div>


            <button type="submit" class="btn btn-danger btn-block w-100 my-2">Login</button>
        </form>
        <p class="text-center my-2"><b>OR</b></p>
        <a href="/signup" class="btn btn-danger btn-block w-100">Sign Up</a>
    </div>


    </div>

    <%- include('partials/footer') -%>